<?xml version="1.0" encoding="utf-8"?>
<LinearLayout

    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/_20sdp"
    android:paddingRight="@dimen/_20sdp"
    android:paddingBottom="@dimen/_10sdp"
    android:background="@drawable/background"
    tools:context=".ui.SignUp_page2"
    android:weightSum="7">


    <de.hdodenhof.circleimageview.CircleImageView

        android:layout_weight="2"
        android:layout_gravity="center_horizontal"
        android:id="@+id/logo"
        android:layout_width="@dimen/logo_size"
        android:layout_height="0dp"
        android:background="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView

        android:layout_weight="5"
        android:layout_marginTop="@dimen/_15sdp"
        android:layout_width="match_parent"
        android:layout_height="0dp">


        <androidx.cardview.widget.CardView
            android:id="@+id/cardview_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logo">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spice Level"
                    android:textSize="@dimen/_12sdp"
                    android:layout_margin="@dimen/_5sdp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textAlignment="center"/>


        <LinearLayout
            android:padding="@dimen/_5sdp"
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_weight="1"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/img_spice_low"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/spice_low"
                    app:civ_border_width="0.1dp"
                    app:civ_border_color="#C7D1D1"/>



                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:text="low"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:gravity="center"
                    android:textAlignment="center"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/img_spice_mild"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/spice_medium"
                    app:civ_border_width="0.1dp"
                    app:civ_border_color="#C7D1D1"/>

                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:text="mild"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:gravity="center"
                    android:textAlignment="center"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"

                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/img_spice_hot"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/spice_hot"
                    app:civ_border_width="0.1dp"
                    app:civ_border_color="#C7D1D1"/>

                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:text="hot"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/_4sdp"
                    android:gravity="center"
                    android:textAlignment="center"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"

                xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_spice_extreme"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/spice_extreme"
                    app:civ_border_color="#C7D1D1"
                    app:civ_border_width="0.1dp" />

            <TextView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="wrap_content"
                android:text="extreme"
                android:layout_centerInParent="true"
                android:layout_marginStart="@dimen/_4sdp"
                android:gravity="center"
                android:textAlignment="center"
                />


        </LinearLayout>



        </LinearLayout>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Seasons"
                    android:textSize="@dimen/_12sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textAlignment="center"/>



                <LinearLayout
                    android:padding="@dimen/_5sdp"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_weight="1"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/img_summer"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:src="@drawable/summer"
                            app:civ_border_width="0.1dp"
                            app:civ_border_color="#C7D1D1"/>

                        <TextView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:text="summer"
                            android:id="@+id/txt_summer"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:gravity="center"
                            android:textAlignment="center"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/img_winter"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:src="@drawable/winter"
                            app:civ_border_width="0.1dp"
                            app:civ_border_color="#C7D1D1"/>

                        <TextView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:text="winter"
                            android:id="@+id/txt_winter"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:gravity="center"
                            android:textAlignment="center"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"

                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/img_spring"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:src="@drawable/spring"
                            app:civ_border_width="0.1dp"
                            app:civ_border_color="#C7D1D1"/>


                        <TextView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:text="spring"
                            android:id="@+id/txt_spring"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:gravity="center"
                            android:textAlignment="center"
                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_weight="1"

                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/img_autumn"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:src="@drawable/autumn"
                            app:civ_border_width="0.1dp"
                            app:civ_border_color="#C7D1D1"/>

                        <TextView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:text="autumn"
                            android:id="@+id/txt_autumn"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:gravity="center"
                            android:textAlignment="center"
                            />


                    </LinearLayout>



                </LinearLayout>



                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Budget"
                    android:layout_margin="@dimen/_10sdp"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-condensed-medium"
                    android:textAlignment="center"/>




                <LinearLayout
                    android:padding="@dimen/_5sdp"
                    android:weightSum="4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <androidx.legacy.widget.Space
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="0.5"/>

                    <LinearLayout
                        android:layout_weight="1"
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/img_budget_low"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:src="@drawable/budget_low"
                            app:civ_border_width="0.1dp"
                            app:civ_border_color="#C7D1D1"/>

                        <TextView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:text="Rs.500"
                            android:id="@+id/txt_budget_low"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:gravity="center"
                            android:textAlignment="center"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_weight="1"

                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/img_budget_mid"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:src="@drawable/budget_mid"
                            app:civ_border_width="0.1dp"
                            app:civ_border_color="#C7D1D1"/>

                        <TextView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:text="Rs.500-1000"
                            android:id="@+id/txt_budget_mid"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:gravity="center"
                            android:textAlignment="center"
                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_weight="1"

                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/img_budget_high"
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="@dimen/_60sdp"
                            android:src="@drawable/budget_high"
                            app:civ_border_width="0.1dp"
                            app:civ_border_color="#C7D1D1"/>

                        <TextView
                            android:layout_width="@dimen/_60sdp"
                            android:layout_height="wrap_content"
                            android:text=">Rs.1000"
                            android:id="@+id/txt_budget_high"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="@dimen/_4sdp"
                            android:gravity="center"
                            android:textAlignment="center"
                            />


                    </LinearLayout>



                </LinearLayout>






            </LinearLayout>



        </androidx.cardview.widget.CardView>

    </ScrollView>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:id="@+id/btn_continue_sign_up2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:background="@drawable/long_button"
            android:text="Continue"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/_20sdp"



            />

    </LinearLayout>


</LinearLayout>