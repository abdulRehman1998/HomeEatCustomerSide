<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ordersLandingPage_Fragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            //view1

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"

                android:fontFamily="@string/cardview_font_bold"
                android:text="Order Again "
                android:textColor="@color/grey_main"
                android:textSize="@dimen/cardview_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2" />


            <androidx.recyclerview.widget.RecyclerView

                android:layout_marginTop="@dimen/cardview_marginTop"
                android:id="@+id/list_orderagain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView">


            </androidx.recyclerview.widget.RecyclerView>

            //view2
            <TextView
                android:id="@+id/textView2"
                android:layout_marginTop="@dimen/cardview_marginTop"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:fontFamily="@string/cardview_font_bold"
                android:text="Best Rated "
                android:textColor="@color/grey_main"
                android:textSize="@dimen/cardview_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/list_orderagain" />


            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="@dimen/cardview_marginTop"
                android:id="@+id/list_bestRated"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView2">


            </androidx.recyclerview.widget.RecyclerView>

            //view3
            <TextView
                android:layout_marginTop="@dimen/cardview_marginTop"
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_20sdp"
                android:fontFamily="@string/cardview_font_bold"
                android:text="Order Again "
                android:textColor="@color/grey_main"
                android:textSize="@dimen/cardview_bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/list_bestRated" />


            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="@dimen/cardview_marginTop"

                android:id="@+id/list_freeDelivery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView3">


            </androidx.recyclerview.widget.RecyclerView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>