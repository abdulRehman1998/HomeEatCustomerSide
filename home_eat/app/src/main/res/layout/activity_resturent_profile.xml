<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:weightSum="3.5"
    android:layout_height="match_parent"
    tools:context=".ui.Resturent_profile">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@drawable/pizza"
        android:layout_weight="1"
        >


        <LinearLayout

            android:background="#99757D7D"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_height="match_parent"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/img_baclk_rest_profile2"
                android:layout_width="@dimen/_20sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:background="@drawable/back" />

                <ImageView
                    android:id="@+id/img_Cart_rest_profile2"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_alignParentRight="true"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:background="@drawable/ic_cart" />



            </RelativeLayout>

            <TextView
                android:id="@+id/resturent_name_rest_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="@dimen/_20sdp"
                android:textColor="@android:color/white"
                android:text="DOMINO'S PIZZA - MM ALAM ROAD"
                />

                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/rectangle_hollow"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Delivery 30 minutes"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_star_white"/>

                <TextView
                    android:id="@+id/rating_resturentProfile"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.1"
                    android:textColor="@android:color/white"

                    />

                <TextView
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="[ 1K+ ]"
                    android:textColor="@android:color/white"

                    />



            </LinearLayout>


        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="ajdhalsjdlkajdslkjasldjasldjlasjdlajdlj"
            android:textSize="@dimen/_50sdp"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="2.5"
        >

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tabs_layout_restaurants_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            app:tabBackground="@drawable/tab_color_selector"
            app:tabGravity="fill"
            app:tabMode="fixed"
            app:tabSelectedTextColor="@android:color/white"
            app:tabTextColor="@color/appColor"
            >

               </com.google.android.material.tabs.TabLayout>


        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewpager_restaurants_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />




    </LinearLayout>





</LinearLayout>
