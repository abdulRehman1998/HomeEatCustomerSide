<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle"
    android:padding="@dimen/_10sdp">


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content"
        android:weightSum="1"
        android:layout_marginTop="@dimen/_30sdp">

        <androidx.legacy.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"/>


        <ImageView
            android:id="@+id/imgMinus_dialog"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/ic_minus"/>

        <TextView
            android:id="@+id/tvCounter_dialog"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.4"
            android:textSize="@dimen/_25sdp"
            android:text="50"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/imgPlus_dialog"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="@dimen/_30sdp"
            android:background="@drawable/ic_plus"/>



    </LinearLayout>


    <Button
        android:id="@+id/btnAdd_dialog"
        android:layout_marginTop="@dimen/_25sdp"
        android:layout_gravity="center"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/long_button"
        android:text="Add To Cart"
        android:textColor="@android:color/white"
        android:fontFamily="@string/cardview_font_bold"
        android:textSize="@dimen/_15sdp"/>

    <Button
        android:id="@+id/btnCancel_dialog"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_gravity="center"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/long_button"
        android:text="Cancel"
        android:textColor="@android:color/white"
        android:fontFamily="@string/cardview_font_bold"
        android:textSize="@dimen/_15sdp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"/>

</LinearLayout>